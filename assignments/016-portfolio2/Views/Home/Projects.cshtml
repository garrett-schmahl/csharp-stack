<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects</title>
  <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
  <div class="container">
    <div class="header">
      <a href="/">Home</a>
      <p>|</p>
      <p>Projects</p>
      <p>|</p>
      <a href="/contact">Contact</a>
    </div>
    <h1>Here are some projects of mine!</h1>
    <div class="project_scroller">
      @{
      List<string> projectList = new List<string>();
      projectList.Add("Finding Yoitsu");
      projectList.Add("Lawrence");
      projectList.Add("Aquire Apples");
      projectList.Add("Obtaining Wealth");
      projectList.Add("Create a Got Spring");
      projectList.Add("Curing Hangover");
      foreach(string project in projectList){
      <div class="project">
        <img src="~/img/apple.jpg" alt="apple" width="100px">
        <div>
          <h2>@project</h2>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed mauris massa, sagittis et elit iaculis, semper
          volutpat mauris.</p>
          </div>
      </div>
      }

      }

    </div>
  </div>
</body>
</html>