<h1><a href="/products">Products</a> | Categories</h1>
<div class="row">
  <div class="col">
    <h3>New Category</h3>
    @model Category
    <form asp-controller="home" asp-action="AddCategory" method="POST">
      <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name">
      </div>
      <button type="Submit">Add</button>
    </form>
  </div>
  <div class="col">
    <h3>Existing Categories</h3>
    <ul>
      @foreach (Category cat in ViewBag.Categories)
      {
        <li>
          <a href="category/@cat.CategoryID">@cat.Name</a>
        </li>
      }
    </ul>
  </div>
</div>
