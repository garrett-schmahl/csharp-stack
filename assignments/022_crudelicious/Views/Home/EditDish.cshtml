<div class="text-center">
  <h1 class="display-4">Edit @ViewBag.Dish.Name</h1>
</div>

@model Dish
<form asp-controller="home" asp-action="Update" asp-route-id="@ViewBag.Dish.DishId" method="POST">
  <div class="form-group">
    <span asp-validation-for="Chef"></span>
    <label asp-for="Chef"></label>
    <Input type="text" asp-for="Chef" value="@ViewBag.Dish.Chef">

  </div>
  <div class="form-group">
    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <Input type="text" asp-for="Name" value="@ViewBag.Dish.Name">
  </div>
  <div class="form-group">
    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories"></label>
    <Input type="number" asp-for="Calories" value="@ViewBag.Dish.Calories">
  </div>
  <div class="form-group">
    <span asp-validation-for="Tastiness"></span>
    <label asp-for="Tastiness"></label>
    <Select asp-for="Tastiness" value="@ViewBag.Dish.Tastiness">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </Select>
  </div>
  <div class="form-group">
    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <textarea asp-for="Description"></textarea>
  </div>
  <button tye="submit">Submit</button>
</form>